---
  const today = new Date();
  import { Icon } from 'astro-icon'
---

<footer class="text-center">
  <div class="px-auto py-6">
    <h3 class="title marker text-3xl text-primary-500">Volg mij op:</h3>
    <div class="flex gap-4 justify-center text-center text-xs font-bold my-6">
      <a id="facebook" href="https://www.facebook.com/ezriharmusial" target="_blank" rel="nofollow noopener noreferrer" type="button" class="btn-icon variant-ringed-primary ring-2">
        <Icon pack="fa" name="facebook-official" />
      </a>

      <a id="twitter" href="https://twitter.com/ezriharmusial" target="_blank" rel="nofollow noopener noreferrer" type="button" class="btn-icon variant-ringed-primary ring-2">
        <Icon pack="fa" name="twitter" />
      </a>

      <a id="youtube" href="https://www.youtube.com/ezriharmusial" type="button" class="btn-icon variant-ringed-primary ring-2">
        <Icon pack="fa" name="youtube" />
      </a>

      <a id="linkedin" href="https://www.linkedin.com/ezriharmusial" type="button" class="btn-icon variant-ringed-primary ring-2">
        <Icon pack="fa" name="linkedin-square" />
      </a>

      <a id="github" href="https://github.com/ezri-harmusial/" type="button" class="btn-icon variant-ringed-primary ring-2">
        <Icon pack="fa" name="github" />
      </a>
    </div>
  </div>
  <div class="text-center p-4">
    &copy; {today.getFullYear()}  Copyright:
      <a class="brand flex justify-center items-center italic text-xl font-shadow font-bold " href="https://downthewormhole.nl" title="This website!">
        <span class="flex bg-black py-4 px-8">
            <span class="flex flex-col font-bold uppercase space-y-0">
                <span class="text-xs translate-y-1">Down</span>
                <span class="text-xl -translate-y-1">The</span>
            </span>
            <span class="text-base md:text-4xl pl-1 font-bold uppercase">W<img src="/images/ring.webp" class="w-7 h-7 -translate-y-1 inline -z-10"/>rmhole</span>
        </span>
      </a>
  </div>
</footer>

<style lang="css">
    [astro-icon] {
      min-width: 1rem;
    }
</style>